{
  "name": "@kouts/vue-simple-dropdown",
  "description": "A Vue.js 3 simple dropdown component.",
  "version": "0.0.0-semantic-release",
  "license": "MIT",
  "repository": "https://github.com/kouts/vue-simple-dropdown",
  "author": "Giannis Koutsaftakis",
  "keywords": [
    "dropdown",
    "menu",
    "floating-vue"
  ],
  "main": "./dist/vue-simple-dropdown.umd.js",
  "module": "./dist/vue-simple-dropdown.es.js",
  "types": "./dist/SimpleDropdown.vue.d.ts",
  "exports": {
    ".": {
      "import": "./dist/vue-simple-dropdown.es.js",
      "require": "./dist/vue-simple-dropdown.umd.js"
    }
  },
  "unpkg": "dist/vue-simple-dropdown.umd.js",
  "sideEffects": false,
  "scripts": {
    "dev": "vite",
    "build:vite": "vue-tsc --noEmit && vite build",
    "build": "npm run build:vite",
    "build-playground": "BUILD_MODE=playground npm run build:vite",
    "preview": "vite preview",
    "lint": "eslint \"**/*.{vue,ts,js}\"",
    "lint-fix": "eslint --fix \"**/*.{vue,ts,js}\"",
    "test:unit": "jest",
    "test:unit-coverage": "jest --coverage && make-coverage-badge",
    "typecheck": "vue-tsc --noEmit",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/core": "^7.20.2",
    "@babel/preset-env": "^7.20.2",
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@kouts/eslint-config": "^0.0.8",
    "@types/jest": "^29.2.2",
    "@types/node": "^18.11.9",
    "@vitejs/plugin-vue": "^3.2.0",
    "@vue/compiler-sfc": "^3.2.45",
    "@vue/test-utils": "^2.2.1",
    "@vue/vue3-jest": "^29.2.0",
    "autoprefixer": "^10.4.13",
    "babel-jest": "^29.3.1",
    "eslint": "^8.27.0",
    "floating-vue": "^2.0.0-beta.20",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "lint-staged": "^13.0.3",
    "make-coverage-badge": "^1.2.0",
    "postcss": "^8.4.19",
    "prettier": "^2.7.1",
    "rollup-plugin-delete": "^2.0.0",
    "sass": "^1.56.1",
    "tailwindcss": "^3.2.4",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4",
    "vite": "^3.2.3",
    "vite-plugin-dts": "^1.7.0",
    "vue": "^3.2.45",
    "vue-tsc": "^1.0.9"
  },
  "peerDependencies": {
    "floating-vue": "^2.0.0-beta.20"
  }
}